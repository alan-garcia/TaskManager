@* @model TaskManager.Models.Task *@
@model TaskViewModel

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar Tarea</h1>

<h3 class="mb-4">¿Estás seguro de que quieres eliminarlo?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Title)</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DueDate)</dt>
        <dd class="col-sm-10">@Model.DueDate?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Priority)</dt>
        <dd class="col-sm-10">@Model.Priority</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsCompleted)</dt>
        <dd class="col-sm-10">@(Model.IsCompleted == true ? "Sí" : "No")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Category)</dt>
        <dd class="col-sm-10">@Model.CategoryId</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Volver</a>
    </form>
</div>
